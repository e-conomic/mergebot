{
  "name": "mergebot",
  "version": "1.0.0",
  "description": "GitHub Action that automates merging Dependabot PRs",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean -- lib && tsc",
    "build:check": "npm run build -- --noEmit",
    "build:watch": "tsc --watch",
    "clean": "rimraf",
    "lint": "eslint **/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "package": "npm run build && npm run package:single",
    "package:single": "npm run clean -- dist && ncc build --out dist --minify --source-map --v8-cache",
    "test": "jest",
    "test:ci": "npm run test -- --ci",
    "test:coverage": "npm run test -- --collect-coverage",
    "test:watch": "npm run test:coverage -- --watch --verbose false",
    "workflow:test": "npm run build:check && npm run lint && npm run test:ci",
    "prepare": "husky install",
    "husky:pre-commit": "npm run build:check && npm run test && lint-staged && npm run package && git add ."
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "engines": {
    "node": "14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e-conomic/mergebot.git"
  },
  "keywords": [],
  "author": "Visma e-conomic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/e-conomic/mergebot/issues"
  },
  "homepage": "https://github.com/e-conomic/mergebot#readme",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^4.0.0",
    "find-versions": "^4.0.0",
    "semver-diff": "^3.1.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vercel/ncc": "^0.28.3",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  }
}